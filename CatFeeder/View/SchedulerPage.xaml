<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatFeeder.View.SchedulerPage"
             xmlns:viewmodel="clr-namespace:CatFeeder.ViewModel"
             xmlns:model="clr-namespace:CatFeeder.Models"
             x:DataType="viewmodel:SchedulerPageViewModel">
    <StackLayout>
        <Label Text="New Alarm" FontAttributes="Bold" />
        <StackLayout Orientation="Horizontal">
            <Label Text="Time" />
            <TimePicker Time="{Binding AlarmTime}" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Name" />
            <Entry Text="{Binding AlarmName}" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Repeat" />
            <Picker x:Name="RepeatPicker" ItemsSource="{Binding RepeatOptions}" SelectedItem="{Binding SelectedRepeatOption}" />
        </StackLayout>
        <Button Text="Save" Command="{Binding SaveAlarmCommand}" />
        <ListView ItemsSource="{Binding Alarms}" SelectedItem="{Binding SelectedAlarm}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding AlarmName}" Detail="{Binding AlarmTime, StringFormat='h:mm a'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Delete" Command="{Binding DeleteAlarmCommand}" IsVisible="{Binding HasSelectedAlarm}" />
    </StackLayout>
</ContentPage>



